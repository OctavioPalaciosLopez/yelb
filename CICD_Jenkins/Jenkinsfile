pipeline{
    agent any
    options{
        skipStagesAfterUnstable()
        skipDefaultCheckout(true)
    }
    stages{
        stage('Checking Repository'){
            steps{
                sh 'rm -f ~/.dockercfg ~/.docker/config.json || true'
                checkout scm
            }
        }
        stage('Build Docker Image'){
            steps{
                script{
                    app = docker.build("yelb/nginx:${env.BUILD_ID}", "./yelb-ui")
                }
            }   
        }
        stage('Deploy') {
            steps {
                script{
                    docker.withRegistry('https://749295092856.dkr.ecr.us-west-1.amazonaws.com/test_registry', 'ecr:us-west-1:AWS_ECR') {
                        app.push()
                    }
                }
            }
        }
    }
}