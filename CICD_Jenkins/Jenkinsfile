pipeline{
    agent any
    options{
        skipStagesAfterUnstable()
        skipDefaultCheckout(true)
    }
    stages{
        stage('Checking Repository'){
            steps{
                checkout scm
            }
        }
        stage('Build Docker Image'){
            steps{
                script{
                    app = docker.build("yelb/nginx", "./yelb-ui")
                }
            }   
        }
        stage('Deploy') {
            steps {
                script{
                    docker.withRegistry('https://749295092856.dkr.ecr.us-west-1.amazonaws.com/test_registry', 'AWS_ECR') {
                        app.push("latest")
                    }
                }
            }
        }
    }
}